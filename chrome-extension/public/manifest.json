{
  "manifest_version": 3,
  "name": "CtrlV",
  "description": "Send links, texts and files between your devices.",
  "version": "1.0",
  "icons": {
    "16": "icons/v16.png",
    "48": "icons/v48.png",
    "128": "icons/v128.png"
  },
  "permissions": ["activeTab", "tabs", "contextMenus"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
